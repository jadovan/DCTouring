<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/TouringAppBarStyle</item>
    </style>

    <!-- App bar style -->
    <style name="TouringAppBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove the shadow below the app bar -->
        <item name="elevation">0dp</item>
    </style>

    <!-- Style for location name -->
    <style name="DefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_view_ht</item>
        <item name="android:layout_weight">@dimen/text_view_wt</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <!-- Style for location attributes -->
    <style name="AttributeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_view_ht</item>
        <item name="android:layout_weight">@dimen/text_view_wt</item>
        <item name="android:gravity">top</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/attribute_text_size</item>
    </style>

    <!-- Style for detailed information location name -->
    <style name="InfoDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/info_location_padding</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <!-- Style for detailed information location attributes -->
    <style name="InfoAttributeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/info_attribute_text_size</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <!-- Style for location description attribute -->
    <style name="DescriptionAttributeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingTop">@dimen/info_location_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/info_attribute_text_size</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">#A8A19E</item>
        <item name="tabIndicatorColor">#BB133E</item>
        <item name="tabSelectedTextColor">#002664</item>
        <item name="tabMode">scrollable</item>
        <item name="android:background">@color/white_background</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
